load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
)

configure_make(
    name = "libffi",
    build_data = ["@llvm_toolchain_llvm//:ar"],
    configure_in_place = True,
    configure_options = [
        "--disable-shared",
        "--disable-docs",
        "--with-pic",
    ],
    env = select({
        "@platforms//os:macos": {
            "ARFLAGS": "-static -o",
        },
    }),
    lib_source = ":all_srcs",
)
